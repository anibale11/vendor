    </type>
    <type name="Magento\CatalogSearch\Model\Search\IndexBuilder">
        <plugin name="ecombricksVendorCatalogSearchPluginModelSearchIndexBuilder" type="Ecombricks\VendorCatalogSearch\Plugin\Model\Search\IndexBuilder" />
    </type>
