<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Ecombricks\VendorBackend\Block\Vendor\Switcher" name="vendor.switcher" template="Ecombricks_VendorBackend::vendor/switcher.phtml" before="store_switcher">
                <arguments>
                    <argument name="default_option_label" xsi:type="string" translate="true">Default Config</argument>
                </arguments>
                <action method="setUseConfirm">
                    <argument name="params" xsi:type="string">0</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>