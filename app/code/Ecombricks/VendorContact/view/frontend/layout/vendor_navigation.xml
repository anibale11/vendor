<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sidebar.main">
            <referenceBlock name="vendor_navigation">
                <block class="Ecombricks\Vendor\Block\Vendor\Navigation\Link" name="vendor.navigation.contact.link" ifconfig="contact/contact/enabled">
                    <arguments>
                        <argument name="label" xsi:type="string" translate="true">Contact Vendor</argument>
                        <argument name="path" xsi:type="string">vendor_contact</argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>