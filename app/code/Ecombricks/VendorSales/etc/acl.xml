                    </resource>
                </resource>
                <resource id="Magento_Backend::stores" enabledForVendor="true">
                    <resource id="Magento_Backend::stores_settings" enabledForVendor="true">
                        <resource id="Magento_Config::config" enabledForVendor="true">
                            <resource id="Magento_Sales::config_sales" enabledForVendor="true" />
                            <resource id="Magento_Sales::sales_email" enabledForVendor="true" />
                            <resource id="Magento_Sales::sales_pdf" enabledForVendor="true" />
                        </resource>
                    </resource>
