                                <resource id="Magento_Sales::email" enabledForVendor="true" />
                                <resource id="Magento_Sales::reorder" enabledForVendor="true" />
                                <resource id="Magento_Sales::actions_edit" enabledForVendor="true" />
                                <resource id="Magento_Sales::cancel" enabledForVendor="true" />
